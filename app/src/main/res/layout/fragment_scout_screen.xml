<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoutScreen$PlaceholderFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/slate">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/matchTeamBar">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamNumberTV"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Number"
                style="@style/textDefault"/>
            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:id="@+id/teamNumberET"
                style="@style/textDefault"
                android:inputType="number"
                android:maxLength="4"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matchNumberTV"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Number"
            style="@style/textDefault"/>
            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:id="@+id/matchNumberET"
                style="@style/textDefault"
                android:inputType="number"
                android:maxLength="3"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

        //container for totes bruh

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totesTV"
            android:layout_below="@id/matchTeamBar"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Totes"
                android:gravity="center_horizontal"
                style="@style/textDefault"
                android:paddingBottom="5dp"/>



            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rgTotes">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="0"
                    android:id="@+id/rbTotes0"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"
                    android:layout_weight="1"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/rbTotes1"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/rbTotes2"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/rbTotes3"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/rbTotes4"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/rbTotes5"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/rbTotes6"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"
                    android:gravity="center"
                    android:layout_weight="1" />
            </RadioGroup>
        </LinearLayout>

        //container for can and noodle linear layouts
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/totesTV"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            >
            //Can group

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/canTV"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Can"
                    style="@style/textDefault"
                    android:paddingBottom="5dp"
                    />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rgCan">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="No"
                        android:id="@+id/rbCanNo"
                        android:onClick="onRBChange"
                        android:buttonTint="@color/purp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:id="@+id/rbCanYes"
                        android:onClick="onRBChange"
                        android:buttonTint="@color/purp"/>
                </RadioGroup>
            </LinearLayout>

        //Noodle group
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noodleTV"
            android:layout_below="@id/matchTeamBar"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noodle"
           style="@style/textDefault"
           android:paddingBottom="5dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rgNoodle">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="No"
                    android:id="@+id/rbNoodleNo"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:id="@+id/rbNoodleYes"
                    android:onClick="onRBChange"
                    android:buttonTint="@color/purp"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>




        //Totes Group


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:maxLines="5"
            android:hint="Notes"
            android:layout_alignParentBottom="true"
            android:id="@+id/notesET"
            android:maxHeight="200dp"
            android:gravity="top"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/notesET"
            android:id="@+id/linearLayout">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scored"
                android:onClick="scored"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurp"
                style="@style/textDefault"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:onClick="clear"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurp"
                style="@style/textDefault"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish"
                android:onClick="exitScreen"
                android:layout_weight="1"
                android:backgroundTint="@color/darkpurp"
                style="@style/textDefault"/>
        </LinearLayout>




    </RelativeLayout>
</RelativeLayout>
